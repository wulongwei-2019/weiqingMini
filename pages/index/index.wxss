.fl{ float: left}
.fr{ float: right}
.oh{ overflow: hidden}
.dn{ display: none}
.mt10{ margin-top: 10rpx }
.mt20{ margin-top: 20rpx}
page{ background-color: #F2F2F2;}
.h-title{ display: block; font-size: 32rpx; text-align: center}
.search{ background-color: #F2F2F2; padding: 20rpx;}
.search .searchBtn{font-size: 24rpx;margin-bottom: 0px;border: 1px solid #e1e1e1;border-radius: 40rpx;height:56rpx;line-height: 56rpx;padding-left: 20rpx; background-color: #fff}
.topNav{background-color: #fff}
.topNav text{ display: inline-block; padding: 0rpx 25rpx; font-size: 28rpx;  height: 80rpx; line-height: 80rpx;border-bottom: 3px solid #fff}
.topNav .active{ color: #FF7433; border-bottom: 3px solid #FF7433}
.banner image{ width:100%; } 
.indexClassify{overflow: hidden; padding: 20rpx 0rpx;background-color: #fff}
.indexClassify .list{  width: 33.33%; float: left; text-align: center;}
.indexClassify .list image{ width: 60rpx; height: 60rpx}
.indexClassify .list .intro{ font-size: 24rpx}
.indexZj{ margin-top: 20rpx; background-color: #fff}
.indexCase{ margin-top: 20rpx; background-color: #fff}
.indexCase .list{ position: relative;overflow: hidden; padding: 20rpx; border-bottom: 1px solid #eee}
.indexCase .indexCimg{ width:180rpx; height: 120rpx; border-radius: 10rpx; float: left}
.indexCase .content{ width:70%; position: absolute; left: 0px; top: 20rpx; padding-left: 220rpx;}
.indexCase .content .cTitle{ display: block; width: 100%; font-size:26rpx; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; }
.indexCase .content .tip{ font-size: 20rpx; color: #fff; background-color: #FD8B8C; padding: 0rpx 6rpx}
.indexCase .content .author,.indexCase .content .time{ float: left; font-size: 22rpx; color: #666}
.indexCase .content .update,.indexCase .content .num{ float: left; font-size: 22rpx; color: #666; margin-left: 20rpx}
.indexCase .content .price{ color: #f00 ;font-size: 22rpx; margin-right: 20rpx}

.mask{ width: 100%; height: 100%; background:rgba(0, 0, 0, 0.6); position: fixed; left: 0; top: 0; z-index: 999;}
.authorize{ width:400rpx;position: fixed; left: 0; margin-left: 25%; top:30%; }
.authorize .avatarImg{ display: block; width:200rpx; height: 200rpx; margin-left: 100rpx}
.authorize .userName{ display: block; font-size: 28rpx;text-align: center; margin-top: 20rpx; color: #fff}
.authorize .authorizeBtn{ background-color: #02AF00; color: #fff;font-size: 28rpx; margin-top: 20rpx }




















